<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.heechan.moredetailed.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/edt_main_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"

            android:hint="입력"

            android:text="@={vm.inputMessage}"
            />

        <TextView
            android:id="@+id/txt_main_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@{vm.resultMessage}"

            app:layout_constraintTop_toBottomOf="@id/edt_main_message"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Button
            android:id="@+id/btn_main_translated"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="번역"

            android:onClick="@{() -> vm.translated()}"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>